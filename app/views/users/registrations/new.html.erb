<div class="container">
  <div class="divider-new">
  	   <h2 class="h2-responsive wow bounceIn">Regístrate</h2>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
  	
  	<div class="row">


          <div class="md-form col-6">
           <%= f.input :nombre,required: true, autofocus: true, :input_html => { :class => "form-control" } %>
         
          </div>

          <div class="md-form col-6">
                <%= f.input :email, required: true,:input_html => { :class => "form-control" }%>
          </div>
    </div>
  	      
  		


  	<div class="row">
          <div class="md-form col-6">
        		<%= f.input :dni,required: true,:input_html => { :class => "form-control" }%>
                <small id="dniHelp" class="form-text text-muted">Solo números</small>
          </div>

      		<div class="md-form col-6">
          		 <%= f.input :password, required: true, :input_html => { :class => "form-control" , hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)} %>
          
          </div>
    </div>

  	<div class="row">

          <div class="md-form col-6">
      		 <%= f.input :password_confirmation, required: true , :input_html => { :class => "form-control" }%> 
          </div>
  		
  		    <div class="md-form col-6">
      		  <%= f.input :fecha_inhabilitacion,as: :string, required: true , :input_html => { :class => "form-control datepicker" }%>

          </div>
           
  	</div>

    <div class="form-action">
      <%= f.button :submit, "Sign up" , :class => "btn btn-primary pull-right"%>
    </div>
  <% end %>

  <%= render "users/shared/links" %>

</div>
