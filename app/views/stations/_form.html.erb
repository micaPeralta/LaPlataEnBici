<%= simple_form_for(@station) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :capacity %>
    <%= f.input :latitude %>
    <%= f.input :longitude %>
    <%= f.input :estate %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
